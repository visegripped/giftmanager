FROM node:18-alpine

# Install pnpm
RUN npm install -g pnpm

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install

# Expose Vite dev server port
EXPOSE 5173

# Start dev server (will be overridden by docker-compose command)
CMD ["pnpm", "dev", "--host"]

